<%= div_for article do %>
  <h3>
    Votes: <%= article.votes_for - article.votes_against %>    
    <%= link_to( image_tag('updark.png'), vote_up_article_path(article), :method => :article)  %>
    <%= link_to( image_tag('downdark.png'), vote_down_article_path(article), :method => :article)  %>
    
<%-#    <%= link_to('Up!', vote_up_article_path(article), :method  => :article) %>
<%-#        <%= link_to('Down!', vote_down_article_path(article), :method  => :article) %>


    <%= link_to article.title, article %>
    <% if article.owned_by? current_user %>
      <span class='actions'>

        <%= link_to t('general.edit'), edit_article_path(article) %>
        <%= link_to t('general.delete'), article, :confirm => t('general.are_you_sure'), :method => :delete %>
      </span>
    <% end %>
  </h3>
  <%= simple_format raw(article.body) %>
<%#  <%= simple_format raw(article.excerpt) %>
  <%= simple_format raw(article.location) %>
  <%= simple_format raw(article.published_at) %>
  <%= link_to article.excerpt, article.excerpt %>

<% end %>
